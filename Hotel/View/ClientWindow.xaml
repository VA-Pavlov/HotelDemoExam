<Window x:Class="Hotel.View.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.View"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0,20" Grid.Column="1">
            <TextBlock Text="{Binding FirstName}" FontSize="20"/>
            <TextBlock Text="{Binding Surname}" FontSize="20"/>
            <TextBlock Text="{Binding Status}" FontSize="20"/>
            <TextBlock Text="{Binding LastDateLogin}" FontSize="20"/>
            <TextBlock Text="{Binding Role}" FontSize="20"/>
            <Button Margin="40" FontSize="20" Click="LogOut_Click">Выйти</Button>
        </StackPanel>
    </Grid>
</Window>
