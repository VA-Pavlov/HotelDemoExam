<Window x:Class="Hotel.View.UserInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.View"
        mc:Ignorable="d"
        Title="UserInformationWindow" Height="450" Width="400">
    <StackPanel Margin="20">
        <Grid  Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Имя:" FontSize="20" Margin="10,0"/>
            <TextBox Grid.Column="1" Text="{Binding FirstName}" />
        </Grid>
        <Grid  Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Фамилия:" FontSize="20" Margin="10,0"/>
            <TextBox Grid.Column="1" Text="{Binding Surname}"/>
        </Grid>
        <Grid  Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Login:" FontSize="20" Margin="10,0"/>
            <TextBox Grid.Column="1" Text="{Binding Login}"/>
        </Grid>
        <Grid  Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Пароль:" FontSize="20" Margin="10,0"/>
            <TextBox Grid.Column="1" Text="{Binding Password}"/>
        </Grid>
        <Grid  Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Статус:" FontSize="20" Margin="10,0"/>
            <TextBox Grid.Column="1" Text="{Binding Status}"/>
        </Grid>
        <Grid  Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Роль:" FontSize="20" Margin="10,0"/>
            <TextBox Grid.Column="1" Text="{Binding Role}"/>
        </Grid>
        <Button x:Name="SaveButton" FontSize="20" Margin="10,10" Click="SaveButtonClick"></Button>
        <Button FontSize="20" Margin="10,10"> Вернуться</Button>
    </StackPanel>
</Window>
